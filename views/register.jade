extends loginlayout

block content
  section.hero.is-fullheight.is-dark.is-bold
    .hero-head
      .container
        nav.nav
          .container
            .nav-left
              a.nav-item(href='/')
                img(src='/images/bulma-white.png', alt='Description')
            span.nav-toggle
              span
              span
              span
            .nav-right.nav-menu
              a.nav-item(href='/')
                | Home
              a.nav-item(href='/auth/login')
                | Login
              a.nav-item.is-active(href='/auth/register')
                | Register
    .hero-body
      .container
        .columns.is-vcentered
          .column.is-4.is-offset-4
            h1.title
              | Register
            .box
              if (error)
                //--var eArr = []
                //--var e
                //--var a
                //-for e in Object.keys(error.errors)
                //-  eArr.push(e)
                //-for a in eArr
                //- for err in error
                .notification.is-danger
                  | #{error}
              //--var er = "#{error}"
              //--var a = er.slice(1)
              //-h1= a
              form(role="form", method="POST", action="/auth/register")
                label.label 
                  | Field with 
                  strong.iscolor *
                  |  is required.
                label.label 
                  | Username
                  strong.iscolor *
                  |  (atleast 8 alpha characters only)
                  input.input(type="text", placeholder="", name="username")
                label.label 
                  | Password
                  strong.iscolor *
                  input.input(type="password", placeholder="", name="password")
                label.label First Name
                  input.input(type="text", placeholder="", name="first_name")
                label.label Last Name
                  input.input(type="text", placeholder="", name="last_name")
                label.label Contact
                  input.input(type="text", placeholder="", name="contact")
                label.label Facebook Page
                  input.input(type="text", placeholder="", name="facebook")
                label.label 
                  | Email
                  strong.iscolor *
                  input.input(type="text", placeholder="example@example.com", name="email")
                p.control
                  .block
                      button.button.is-dark(type="submit" , value="Register") Register
                      span        
                      a.btn.btn-link(href="/")
                        button.button.is-dark(type="button") Cancel
                  
  include footer

                
